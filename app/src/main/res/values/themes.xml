<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickTech" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:typeface">monospace</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>

    </style>

    <style name="active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="dialog_congratulation_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_congratulation_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_congratulation_exit</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"
        >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>

    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/gray1</item>
    </style>
</resources>